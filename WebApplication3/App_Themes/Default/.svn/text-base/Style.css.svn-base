* { padding:0 auto; margin:0 auto; }
body { text-align:center; }

#wrapper { padding:100px; }

#loginForm { text-align:left; width:300px; margin:15px 0; padding:20px 10px; border:2px solid #6699CC; color:#6699CC; } 
#loginForm h3 { border-bottom:1px solid #6699CC; margin-bottom:25px; padding:5px 0; }
#loginForm .lrow { padding:5px 0; }
#loginForm .lrow .label { display:inline-block; width:70px; font-weight:bold; }
#loginForm .lrow .textbox { width:175px; padding:3px; color:#999; }
#loginForm .lbutton  { border:1px solid #6699CC; background-color:#6699CC; padding:1px 10px; color:#FFF; }